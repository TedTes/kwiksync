{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
